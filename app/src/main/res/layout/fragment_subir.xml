<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bruno.debarrio.fragments.SubirFragment"
    android:background="@android:color/holo_blue_dark">

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/subir_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imagen_para_foto"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_above="@+id/boton_tomar_foto"
                android:layout_marginBottom="0dp"
                android:layout_marginVertical="@dimen/fab_margin"
                android:src="@android:color/darker_gray"/>
                <!--android:src="@mipmap/camera"-->

            <Button
                android:id="@+id/boton_tomar_foto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imagen_para_foto"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:text="Tomar Foto" />

            <Button
                android:id="@+id/boton_ubicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/boton_tomar_foto"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:text="UbicaciÃ³n" />

            <EditText
                android:id="@+id/editext_motivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_above="@+id/editext_comentario"
                android:hint="Motivo"/>

            <EditText
                android:id="@+id/editext_comentario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_below="@+id/editext_motivo"
                android:layout_marginTop="10dp"
                android:hint="Comentario"/>

            <Button
                android:id="@+id/boton_compartir"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_below="@+id/editext_comentario"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Compartir" />

            <!--
            <com.google.android.gms.plus.PlusOneButton xmlns:plus="http://schemas.android.com/apk/lib/com.google.android.gms.plus"
                android:id="@+id/plus_one_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                plus:annotation="inline"
                plus:size="standard" />
            -->
        </LinearLayout>
    </ScrollView>
</FrameLayout>
