<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bruno.debarrio.fragments.SubirFragment"
    android:paddingBottom="@dimen/text_margin"
    android:background="#BFFC95">

    <ScrollView
        android:id="@+id/subir_scroll_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/subir_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/text_margin"
            android:layout_marginBottom="0dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/boton_elegir_foto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorLightBlue"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:padding="20dp"
                android:text="Elegir foto" />

            <ImageView
                android:id="@+id/imagen_para_foto"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_above="@+id/boton_tomar_foto"
                android:src="@mipmap/camera"
                android:paddingTop="@dimen/text_margin" />

            <!--
            <Button
                android:id="@+id/boton_tomar_foto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imagen_para_foto"
                android:layout_gravity="center"
                android:text="Tomar Foto" />

            <Button
                android:id="@+id/boton_elegir_foto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/boton_tomar_foto"
                android:layout_gravity="center"
                android:text="Elegir Foto" />

                -->

            <Button
                android:id="@+id/boton_ubicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/boton_tomar_foto"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:paddingBottom="@dimen/text_margin"
                android:paddingTop="@dimen/text_margin"
                android:background="#EDF437"
                android:text="UbicaciÃ³n" />

            <EditText
                android:id="@+id/editext_motivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_above="@+id/editext_comentario"
                android:paddingBottom="@dimen/text_margin"
                android:paddingTop="@dimen/text_margin"
                android:hint="Motivo"/>

            <EditText
                android:id="@+id/editext_comentario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_below="@+id/editext_motivo"
                android:hint="Comentario"/>

            <Button
                android:id="@+id/boton_compartir"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_below="@+id/editext_comentario"
                android:paddingBottom="@dimen/fab_margin"
                android:paddingTop="@dimen/text_margin"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:background="#51B40C"
                android:text="Compartir" />

        <!-- boton flotante de correo
        <com.google.android.gms.plus.PlusOneButton xmlns:plus="http://schemas.android.com/apk/lib/com.google.android.gms.plus"
            android:id="@+id/plus_one_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            plus:annotation="inline"
            plus:size="standard" />
        -->
        </LinearLayout>
    </ScrollView>
</FrameLayout>
