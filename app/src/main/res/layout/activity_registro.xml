<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.bruno.debarrio.RegistroActivity">

    <TextView
        android:id="@+id/textview_regresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="@string/str_regresar"
        android:textColor="@color/colorOrange"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_registrar_titulo"
        android:layout_gravity="center"
        android:textSize="28sp"/>

    <!--
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Nombre"
        android:inputType="text"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Apellido"
        android:inputType="text"/>
    -->

    <EditText
        android:id="@+id/edit_usuario_registro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="@string/usuario_nombre"
        android:inputType="text"
        android:layout_marginTop="@dimen/text_margin"/>

    <EditText
        android:id="@+id/edit_password_registro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="@string/usuario_password"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/boton_registrar_registro"
        android:layout_gravity="center"
        android:text="@string/button_registrar"
        android:background="@color/colorLightBlue"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"/>
        <!-- android:layout_marginTop="@dimen/text_margin" -->

</LinearLayout>
